<h1>Edit your product:</h1>

<%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :stock %>
        <%= f.input :price %>
        <%= f.submit class: 'btn btn-warning' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
<% end %>

<%= link_to 'Back', products_path, class: "btn btn-primary" %>
