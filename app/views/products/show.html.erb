<h1><%= @product.name %></h1>

<%= @product.category %>
<%= @product.description %>
<%= @product.price %>
<p> quantidade em estoque: <%= @product.stock %></p>
<%= image_tag @product.product_url, height: "200px" %>
<%= link_to 'Back', products_path, class: "btn btn-primary" %>


<%= simple_form_for [@product] do |f| %>
 <%= f.button :submit, "finalizar", class: "btn btn-success"%>
<% end %>

<% if @product.user == current_user%>
  <%= button_to "delete this product", @product, method: :delete, class: "btn btn-danger" %>
<% end %>
